<div class="form-group" style="width: 500px; height: 500px; margin: 0 auto; margin-top: 50px; border-radius: 10px; border-radius: 05px;">
    <h2><font face="Old English Text MT">Iniciar sesi&oacute;n</font></h2>
    <br>
    <%= form_tag("index", method: "post") do %>
        <div class="form-group" align="justify">
            <%= label_tag(:us, "Nombre de usuario: ") %>
            <%= text_field_tag :username, nil, class: "form-control", placeholder: "Ingrese su nombre de usuario" %>
        </div>
        <div class="form-group" align="justify">
            <%= label_tag(:ps, "Contraseña: ") %>
            <%= password_field_tag :password, nil, class: "form-control", placeholder: "Ingrese su contraseña" %>
        </div>

        <div class="form-group">
            <%= submit_tag("Iniciar sesión") %>
            <%= button_to "Crear cuenta", action: "createaccount", type: "reset" %>
        </div>
    <% end %>
    <div class="form-group">
        <%= link_to "Ver estadísticas", controller: "statistics", action: "index", id: @statistic %>
        <%= link_to "Ver usuarios", controller: "players", action: "userslist", id: @player %>
    </div>
</div>